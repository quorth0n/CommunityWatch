<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.whirish.hshacks" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HSHacks</name>
    <preference name="Orientation" value="portrait" />
    <description>
        Project for HSHacks III
    </description>
    <author email="lpoflynn@protonmail.ch" href="http://whirish.github.io">
        Liam O'Flynn/"whirish"
    </author>
    <platform name="ios">
        <icon width="64" height="64" src="screen/icon-64_ios.png" />
        <icon width="72" height="72" src="screen/icon-72_ios.png" />
        <icon width="57" height="57" src="screen/icon-57_ios.png" />
        <splash src="screen/splash.png" width="750" height="1334" />
    </platform>
    <icon platform="android" src="screen/icon-64.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.2" />
    <engine name="ios" spec="~3.9.1" />
</widget>
